# ============================================
# LifeCoach Core - Environment Configuration
# ============================================
# Rename this file to .env and fill in your values:
#   cp env.example .env
# ============================================

# ===========================================
# Backend API
# ===========================================
PORT=3000
NODE_ENV=development

# ===========================================
# Notion API
# Get your API key at: https://www.notion.so/my-integrations
# ===========================================
NOTION_API_KEY=secret_xxx
NOTION_DB_TASKS_ID=
NOTION_DB_DAILYLOG_ID=
NOTION_DB_AREAS_ID=
NOTION_DB_PRINCIPLES_ID=

# ===========================================
# LLM Provider Configuration
# Supported providers: openai, anthropic, local
# ===========================================
LLM_PROVIDER=openai
OPENAI_API_KEY=sk-xxx
LLM_MODEL=gpt-4o-mini

# ===========================================
# Telegram Bot
# Get your token from @BotFather on Telegram
# ===========================================
TELEGRAM_BOT_TOKEN=

# ===========================================
# LifeCoach API URL
# Used by n8n and other services to call the API
# In Docker: http://lifecoach-api:3000
# Local dev: http://localhost:3000
# ===========================================
LIFECOACH_API_BASE_URL=http://localhost:3000

# ===========================================
# PostgreSQL Database
# Used for logs, RAG vector storage, etc.
# ===========================================
POSTGRES_USER=lifecoach
POSTGRES_PASSWORD=changeme
POSTGRES_DB=lifecoach
POSTGRES_PORT=5432

# ===========================================
# n8n Workflow Automation
# Uncomment n8n service in docker-compose.yml to use
# ===========================================
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
